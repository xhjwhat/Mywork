<?xml verion="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#ffffff">
    <ImageView android:id="@+id/product_item_img"
        android:layout_width="wrap_conent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="15dip"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView android:id="@+id/product_item_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_conent"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginTop="15dip"/>
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            >
            <TextView 
                android:id="@+id/product_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/red_text"
                android:text="Â¥"/>
            <TextView android:id="@+id/product_money_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_text"
                android:textSize="23sp"
                android:layout_toRightOf="@id/product_money"/>
            <TextView android:id="@+id/product_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/nomal_text"
                android:textSize="18sp"
                android:layout_toRightOf="@id/product_money_text"/>
            <Button android:id="@+id/product_btn"
                android:layout_height="40dip"
                android:layout_width="wrap_content"
                android:text="@string/add_goods_card"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:background="@color/red_text"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
    