<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
         >
         <ImageView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/title_bottom"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout 
                android:id="@+id/first_layout"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                <TextView  
                    android:id="@+id/first_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:textColor="#ff606060"
                    android:layout_centerInParent="true"
                    android:textSize="18sp"/>
                <ImageView
                    android:id="@+id/first_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:visibility="invisible"
                    android:background="@drawable/title_checked"/>
            </RelativeLayout>
            <View android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginTop="5dip"
                android:background="@drawable/diviver"
                android:layout_marginBottom="5dip"/>
            <RelativeLayout 
                android:id="@+id/second_layout"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                <TextView  
                    android:id="@+id/second_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    
                    android:textColor="#ff606060"
                    android:textSize="18sp"/>
                <ImageView
                    android:id="@+id/sencond_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:visibility="invisible"
                    android:background="@drawable/title_checked"/>
            </RelativeLayout>
        </LinearLayout>
        
    </FrameLayout>
    <!-- <LinearLayout android:id="@+id/widget_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2dip"
        android:visibility="gone"/> -->
    <FrameLayout 
        android:id="@+id/content_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>
</LinearLayout>