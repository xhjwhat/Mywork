<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/shop_car_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip" />

        <TextView
            android:id="@+id/shop_car_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:layout_toRightOf="@id/shop_car_select"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/shop_car_store_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:text="@string/edit"
            android:textColor="@color/nomal_text"
            android:textSize="17sp" />

        <View
            android:layout_width="1px"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/shop_car_store_edit"
            android:background="@color/line_bg" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/shop_car_select_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip" />

        <ImageView
            android:id="@+id/shop_car_product_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/shop_car_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip" >

                <TextView
                    android:id="@+id/shop_car_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â¥"
                    android:textColor="@color/red_text"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/shop_car_money_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/shop_car_money"
                    android:textColor="@color/red_text"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/shop_car_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/shop_car_money_text"
                    android:textColor="@color/nomal_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/shop_car_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dip"
                    android:textColor="@color/red_text"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>