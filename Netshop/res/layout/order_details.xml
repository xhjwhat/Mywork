<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <RelativeLayout
        android:id="@+id/getproduct_layout"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_below="@id/title"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/addmanage_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:background="@drawable/store_location" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/addmanage_img"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货人："
                    android:textColor="@color/text_49"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/addmanage_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_49"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/addmanage_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:textColor="@color/text_49"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址："
                    android:textColor="@color/text_49"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/addmanage_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_49"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/arrow_right" />
    </RelativeLayout>
	<RelativeLayout android:layout_width="match_parent"
	    android:layout_height="60dip"
	    android:background="#ffffff">
	    <LinearLayout android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dip"
	        android:layout_centerVertical="true"
	        android:orientation="vertical">
	        <TextView android:id="@+id/orderdetails_text_store"
	            android:textSize="18sp"
	            android:textColor="@color/text_49"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	        <TextView android:id="@+id/orderdetails_text_phone"
	            android:textSize="18sp"
	            android:textColor="@color/nomal_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	    </LinearLayout>
	    <ImageView android:id="@+id/phone_img"
	        android:layout_width="40dip"
	        android:layout_height="40dip"
	        android:layout_centerVertical="true"
	        android:background="@drawable/store_phone_icon"
	        android:layout_marginRight="15dip"
	        android:layout_alignParentRight="true"/>
	    <View android:layout_width="1dip"
	        android:layout_height="40dip"
	        android:layout_centerVertical="true"
	        android:background="@color/line_bg"
	        android:layout_toLeftOf="@id/phone_img"
	        android:layout_marginRight="15dip"/>
	</RelativeLayout>
	<View android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/line_bg"
	    android:layout_marginLeft="20dip"/>
	
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/shop_car_product_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/confirm_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip" >

                <TextView
                    android:id="@+id/confirm_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/red_text"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/confirm_money_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/confirm_money"
                    android:textColor="@color/red_text"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/confirm_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/confirm_money_text"
                    android:textColor="@color/nomal_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/confirm_num_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@id/confirm_price_text"
                    android:textColor="@color/red_text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/confirm_has_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dip"
                    android:text="有货"
                    android:textColor="@color/red_text"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/line_bg"
	    android:layout_marginLeft="20dip"/>
    <RelativeLayout android:layout_width="match_parent"
	    android:layout_height="50dip"
	    android:background="#ffffff"
	    >
	    <Button android:id="@+id/confirm_btn"
	        android:layout_width="60dip"
	        android:layout_height="40dip"
	        android:layout_centerVertical="true"
	        android:background="@color/red_text"
	        android:text="确认"
	        android:textSize="16sp"
	        android:textColor="#ffffff"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dip"/>
	    <TextView 
	        android:id="@+id/confirm_money_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="16sp"
	        android:textColor="@color/red_text"
	        android:layout_centerVertical="true"
	        android:layout_toLeftOf="@id/confirm_btn"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="16sp"
	        android:textColor="@color/red_text"
	        android:layout_centerVertical="true"
	        android:text="合计："
	        android:layout_toLeftOf="@id/confirm_money_text"/>
	</RelativeLayout>
	<View android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/line_bg"
	    />
	<TextView android:id="@+id/orderdetail_ordernum_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="16sp"
	    android:textColor="@color/text_49"
	    android:layout_marginLeft="20dip"
	    android:layout_marginBottom="5dip"/>
	<TextView android:id="@+id/orderdetail_time_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="16sp"
	    android:textColor="@color/text_49"
	    android:layout_marginLeft="20dip"
	    android:layout_marginBottom="5dip"/>
</LinearLayout>